# ==========================================
# PMCELL - Catálogo Online
# Arquivo de exemplo de variáveis de ambiente
# ==========================================

# Django Settings
DEBUG=1
SECRET_KEY=your-super-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database
DATABASE_URL=postgres://pmcell_user:pmcell_password@localhost:5432/pmcell_catalog

# Redis (Cache & Celery)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Media & Static Files
MEDIA_URL=/media/
STATIC_URL=/static/

# Email Settings (opcional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# WhatsApp API Settings
WHATSAPP_API_URL=https://api.z-api.io/instances/YOUR_INSTANCE
WHATSAPP_API_TOKEN=your-whatsapp-api-token

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_NAME=PMCELL Catálogo
NEXT_PUBLIC_COMPANY_NAME=PMCELL

# Production Settings (para Railway/Render)
RAILWAY_STATIC_URL=
RENDER_EXTERNAL_URL=

# Security Settings (produção)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY

# Logging
LOG_LEVEL=INFO

# Analytics (opcional)
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# Backup Settings (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1